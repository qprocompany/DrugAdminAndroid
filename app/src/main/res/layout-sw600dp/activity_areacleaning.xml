<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android"
    tools:context=".Areacleaning">


    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_scan">

    </LinearLayout>

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp"
        android:background="@color/ColorTransparent"
        android:text="Save" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_above="@+id/scanbtn1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="167dp"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/toast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="496dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/toast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/toast1"
        android:layout_marginBottom="59dp"
        android:text="TextView"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:text="QRCode Scanner"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/scanbtn1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorWhite"
        android:src="@drawable/qrcode1" />

</RelativeLayout>
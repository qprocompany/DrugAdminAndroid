<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edmt.dev.androidcamera2api.ReaderActivity"
    android:background="@drawable/android">


    <TextView
        android:id="@+id/textView15"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/scanbtn1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="405dp"
        android:text="TextView" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@color/ColorTransparent"
        android:text="save" />

    <TextView
        android:id="@+id/toast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="466dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/toast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/toast1"
        android:layout_marginBottom="59dp"
        android:text="TextView"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/scanbtn1"
        android:layout_width="132dp"
        android:layout_height="112dp"
        android:layout_below="@+id/toast2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:src="@drawable/qrcode1" />

    <ImageButton
        android:id="@+id/scanbtn2"
        android:layout_width="132dp"
        android:layout_height="112dp"
        android:layout_below="@+id/toast2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:src="@drawable/qrcode1" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/scanbtn1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="211dp"
        android:text="TextView" />


</RelativeLayout>
